# Copy this file to .env and fill in your secrets

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=123456789:ABCdefGhIJKlmNoPQRstuVwxyZ-1234567890

# Database Connection
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://antilurk:your_secure_password_here@postgres:5432/antilurk

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
POSTGRES_DB=antilurk
POSTGRES_USER=antilurk
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Data Directory (where configs and logs are stored)
DATA_DIR=/data
CONFIG_DIR=/data/config

# Timezone for scheduling and logging
TZ=UTC

# NATS Event Publishing (leave blank to disable)
NATS_URL=nats://nats:4222
NATS_SUBJECT_PREFIX=antilurk

# =============================================================================
# OPTIONAL: ADDITIONAL SERVICES
# =============================================================================

# PgAdmin (Database Administration)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin_secure_password
PGADMIN_PORT=8080

# Custom Ports (if defaults conflict with existing services)
POSTGRES_PORT=5432
NATS_PORT=4222
NATS_HTTP_PORT=8222

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Python Path (for development)
# PYTHONPATH=/app/src

